<Window x:Class="tbt.Telas.CadastroCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbt.Telas"
        mc:Ignorable="d"
    
    Title="CadCliente" Height="550" Width="800">
    <ScrollViewer>
        <Grid Margin="0">
            <Grid >
                <Grid.Background>
                    <ImageBrush ImageSource="/Recursos/Imagens/fundoRosa.jfif"/>
                </Grid.Background>

                <!-- Caixa de fundo -->
                <Border Margin="20" CornerRadius="50">

                    <Grid Margin="20">

                        <!-- Título -->
                        <TextBlock Text="CADASTRAR CLIENTE" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Margin="0 10 0 0" FontFamily="Georgia" Foreground="#EF3167"/>

                        <!-- Labels e Campos de Entrada -->
                        <Grid VerticalAlignment="Top" Margin="0 40 0 0">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="0.35*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>

                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>


                            </Grid.RowDefinitions>

                            <!-- Razão Social -->
                            <TextBlock Text="NOME:" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Georgia" FontSize="14" Height="16"/>
                            <TextBox Grid.Column="1" VerticalAlignment="Center" Height="24"  Name="razao_social"/>

                            <!-- Nome Fantasia -->
                            <TextBlock Text="CPF:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Georgia" FontSize="14" Height="16"/>
                            <TextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Height="24"  Name="nome_fantasia"/>

                            <!-- Inscrição Estadual -->
                            <TextBlock Text="NUMERO DE TELEFONE:" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Georgia" FontSize="14" Height="14"/>
                            <TextBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="26"  Name="inscricaoEstadual"/>


                            <!-- Estado -->
                            <TextBlock Text="ESTADO:" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Georgia" FontSize="14" Height="16"/>
                            <TextBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Height="24"  Name="estado"/>

                            <!-- Cidade -->
                            <TextBlock Text="CIDADE:" Grid.Row="4" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Georgia" FontSize="14" Height="16"/>
                            <TextBox Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Height="24"  Name="cidade"/>

                            <!-- Rua -->
                            <TextBlock Text="RUA:" Grid.Row="5" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Georgia" FontSize="14" Height="16"/>
                            <TextBox Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" Height="24"  Name="rua"/>

                            <!-- Número -->
                            <TextBlock Text="NÚMERO:" Grid.Row="6" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Georgia" FontSize="14" Height="16"/>
                            <TextBox Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" Height="24"  Name="numero"/>

                            <!-- Bairro -->
                            <TextBlock Text="BAIRRO:" Grid.Row="11" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Georgia" FontSize="14" Height="16"/>
                            <TextBox Grid.Column="1" Grid.Row="11" VerticalAlignment="Center" Height="24"  Name="bairro"/>


                        </Grid>

                        

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Button Content="EXCLUIR" HorizontalAlignment="Center" Margin="0,5" Width="150" Height="40" FontFamily="Georgia" FontSize="14">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel>
                                                <Image Source="../Recursos/imagens/excluir.png" Height="24" HorizontalAlignment="Center"  />
                                                <TextBlock Text="EXCLUIR" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="EDITAR" HorizontalAlignment="Center" Margin="0,5" Width="150" Height="40" FontFamily="Georgia" FontSize="14">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel>
                                                <Image Source= "../Recursos/Imagens/EDITAR.png" Height="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="EDITAR" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="SALVAR" HorizontalAlignment="Center" Margin="0,5" Width="150" Height="40" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel>
                                                <Image Source="../Recursos/Imagens/salvar.png" Height="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="SALVAR" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
