<Window x:Class="tbt.Telas.ErroPagamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbt.Telas"
        mc:Ignorable="d"
                Title="Erro no pagamento" Height="200" Width="350">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="..\recursos\imagens\lacinhobranco.jpg"/>
        </Grid.Background>


        <Border BorderBrush="Brown" BorderThickness="2" Margin="10">

            <StackPanel>


                <TextBlock Text="Erro no Pagamento- Dados Inaceitaveis" FontFamily="Georgia" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                <TextBlock Text="Preencha os dados corretamente e tente novamente." HorizontalAlignment="Center" Margin="5 55 0 0"/>
                <TextBlock Text="Clique em 'voltar' para arrumar os erros na página anterior." HorizontalAlignment="Center" Margin="5 0 0 0 "/>
                <Button Content="voltar" Width="100" Height="25" HorizontalAlignment="Center" FontFamily="Georgia" BorderBrush="Transparent" Margin="10 10 0 0" Background="LightCoral"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
