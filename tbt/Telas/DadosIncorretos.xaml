<Window x:Class="tbt.Telas.DadosIncorretos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbt.Telas"
        mc:Ignorable="d"
            Title="Dados Incorretos" Height="200" Width="350">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="..\recursos\imagens\lacinhobranco.jpg"/>
        </Grid.Background>


        <Border BorderBrush="Brown" BorderThickness="2" Margin="10">

            <StackPanel>


                <TextBlock Text="DADOS INCORRETOS!" FontFamily="Georgia" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                <TextBlock Text="Preencha os dados corretamente, corrija os erros." HorizontalAlignment="Center" Margin="0 60 0 0"/>
                <TextBlock Text="Clique em sair para continuar a navegar no sistema." HorizontalAlignment="Center" Margin="0 10 0 0"/>
                <Button Content="SAIR" Width="100" HorizontalAlignment="Center" FontFamily="Georgia" BorderBrush="Transparent" Margin="10 10 0 0" Background="LightCoral"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
