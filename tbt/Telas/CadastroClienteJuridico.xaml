<Window x:Class="tbt.Telas.CadastroClienteJuridico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbt.Telas"
        mc:Ignorable="d"
    Title="CadFuncionario" Height="850" Width="800">
    <ScrollViewer>
        <Grid Margin="0">



            <Grid >
                <Grid.Background>
                    <ImageBrush ImageSource="/Recursos/Imagens/fundoRosa.jfif"/>
                </Grid.Background>

                <!-- Caixa de fundo -->
                <Border Margin="20 20 20 20" CornerRadius="50">

                    <Grid Margin="20">

                        <!-- Título -->
                        <TextBlock Text="CADASTRAR CLIENTE JURÍDICO" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Margin="0 10 0 0" FontFamily="Georgia" Foreground="#EF3167"/>

                        <!-- Labels e Campos de Entrada -->
                        <Grid VerticalAlignment="Top" Margin="0 40 0 0">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>

                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>

                            </Grid.RowDefinitions>

                            <!-- Razão Social -->
                            <TextBlock Text="RAZÃO SOCIAL:" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="razao_social"/>

                            <!-- Nome Fantasia -->
                            <TextBlock Text="NOME FANTASIA:" Grid.Row="1" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="nome_fantasia"/>

                            <!-- Inscrição Estadual -->
                            <TextBlock Text="INSCRIÇÃO ESTADUAL:" Grid.Row="2" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="inscricaoEstadual"/>

                            <!-- Cnpj -->
                            <TextBlock Text="CNPJ:" Grid.Row="3" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="cnpj"/>

                            <!-- Data de Abertura -->
                            <TextBlock Text="DATA DE ABERTURA:" Grid.Row="4" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="data_abertura"/>

                            <!-- Telefone -->
                            <TextBlock Text="TELEFONE:" Grid.Row="5" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="telefone"/>

                            <!-- Cep -->
                            <TextBlock Text="CEP:" Grid.Row="6" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="cep"/>

                            <!-- Estado -->
                            <TextBlock Text="ESTADO:" Grid.Row="7" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="7" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="estado"/>

                            <!-- Cidade -->
                            <TextBlock Text="CIDADE:" Grid.Row="8" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="8" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="cidade"/>

                            <!-- Rua -->
                            <TextBlock Text="RUA:" Grid.Row="9" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="9" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="rua"/>

                            <!-- Número -->
                            <TextBlock Text="NÚMERO:" Grid.Row="10" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="10" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="numero"/>

                            <!-- Bairro -->
                            <TextBlock Text="BAIRRO:" Grid.Row="11" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="11" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="bairro"/>

                            <!-- Ponto de Referência -->
                            <TextBlock Text="PONTO DE REFERÊNCIA:" Grid.Row="12" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="12" VerticalAlignment="Center" Height="25" Margin="0 0 -150 0" Name="ponto_referencia"/>

                        </Grid>

                        <!-- Botões Laterais -->

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="90 0 0 50">
                            <Button Content="EXCLUIR" HorizontalAlignment="Center" Margin="0 5" Width="150" Height="40" FontFamily="Georgia" FontSize="14">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel>
                                                <Image Source="/recursos/imagens/excluir.jpeg" Height="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="EXCLUIR" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="EDITAR" HorizontalAlignment="Center" Margin="0 5" Width="150" Height="40" FontFamily="Georgia" FontSize="14">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel>
                                                <Image Source="/recursos/imagens/editar.jpeg" Height="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="EDITAR" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="SALVAR" HorizontalAlignment="Center" Margin="0 5" Width="150" Height="40" Click="Button_Click" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel>
                                                <Image Source="/recursos/imagens/salvar.jpeg" Height="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="SALVAR" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
