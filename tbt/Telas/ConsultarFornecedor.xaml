<Window x:Class="tbt.Telas.ConsultarFornecedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbt.Telas"
        mc:Ignorable="d"
         Title="Consultar Fornecedor" Height="350" Width="800" Background="#D9D9D9">

    <!-- Definição de estilos para reutilização -->
    <Window.Resources>
        <!-- Estilo de borda -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#8C6653"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#D9D9D9"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="#8C6653"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#D9D9D9"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="#8C6653"/>
            <Setter Property="Background" Value="#D9D9D9"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ffe4ec">

       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="509*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Dados do Fornecedor" Background="White" Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="2" BorderBrush="White">
            <Grid Background="White" Height="59">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Nome Empresa -->
                <StackPanel Margin="0,0,0,0">
                    <WrapPanel>
                        <Label Content="Nome Fantasia:" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,0" BorderBrush="#F74780"/>
                        <TextBox x:Name="txtNomeEmpresa" Width="95" Grid.Column="1" Grid.Row="1" BorderBrush="#F74780"/>
                        <Button Content="Pesquisar" Grid.Column="2" Grid.Row="1" Margin="1,0,0,0" Width="80" Background="White" BorderBrush="#F74780" Click="Button_Click_1"/>
                    </WrapPanel>

                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- DataGrid para exibir resultados da consulta -->
        <DataGrid x:Name="dgFornecedores" Grid.Row="2" Margin="10,10,10,10" AutoGenerateColumns="False" Background="White" BorderBrush="#F74780" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="*" />
                <DataGridTextColumn Header="Razão Social" Binding="{Binding razao_social}" Width="*" />
                <DataGridTextColumn Header="Nome Fantasia" Binding="{Binding nome_fantasia}" Width="*" />
                <DataGridTextColumn Header="E-mail" Binding="{Binding email}" Width="*" />
                <DataGridTextColumn Header="Telefone" Binding="{Binding telefone}" Width="*" />
                <DataGridTextColumn Header="Estado" Binding="{Binding estado}" Width="*" />
                <DataGridTextColumn Header="Cidade" Binding="{Binding cidade}" Width="*" />
                <DataGridTextColumn Header="Bairro" Binding="{Binding bairro}" Width="*" />
                <DataGridTextColumn Header="Rua" Binding="{Binding rua}" Width="*" />
                <DataGridTextColumn Header="Número" Binding="{Binding numero}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botões de ação -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
            <Button Content="Realizar Nova Pesquisa" Margin="10"  Background="White" Foreground="Black" BorderBrush="#F74780" Height="31" Click="Button_Click_2">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" BorderThickness="1" BorderBrush="#F74780">
                            <StackPanel>
                                <TextBlock Text="Realizar Nova Pesquisa" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5 7 5 0" FontFamily="Georgia"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Voltar ao Menu Inicial" Margin="10"  Background="White" Foreground="Black" BorderBrush="#F74780" Click="Button_Click_3">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" BorderThickness="1" BorderBrush="#F74780">
                            <StackPanel>
                                <TextBlock Text="Voltar ao Menu Inicial" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5 7 5 0" FontFamily="Georgia"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
