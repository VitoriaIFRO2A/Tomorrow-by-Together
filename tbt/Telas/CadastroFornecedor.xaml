<Window x:Class="tbt.Telas.CadastroFornecedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbt.Telas"
        mc:Ignorable="d"
       Title="CadFuncionario" Height="550" Width="800">
    <ScrollViewer>
        <Grid Margin="0" Background="#ffe4ec">
            <Grid >
            

                <!-- Caixa de fundo -->
                <Border Margin="0" CornerRadius="50">

                    <Grid Margin="20">
                   


                        <!-- Título -->
                        <TextBlock Text="CADASTRAR FORNECEDOR" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Margin="0 10 0 0" FontFamily="Georgia" Foreground="#EF3167"/>

                        <!-- Labels e Campos de Entrada -->
                        <Grid VerticalAlignment="Top" Margin="0 40 0 0">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>

                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>

                            </Grid.RowDefinitions>

                            <!-- Razão Social -->
                            <TextBlock Text="RAZÃO SOCIAL:" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" VerticalAlignment="Center" Height="25" />

                            <!-- Nome Fantasia -->
                            <TextBlock Text="NOME FANTASIA:" Grid.Row="1" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Height="25"/>

                     
                          

                            <!-- E-MAIL -->
                            <TextBlock Text="E-MAIL:" Grid.Row="2" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="25"/>

                            <!-- TELEFONE -->
                            <TextBlock Text="TELEFONE:" Grid.Row="3" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Height="25"/>

                            <!-- ESTADO -->
                            <TextBlock Text="ESTADO:" Grid.Row="4" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Height="25"/>

                            <!-- CIDADE -->
                            <TextBlock Text="CIDADE:" Grid.Row="5" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" Height="25"/>

                            <!-- BAIRRO -->
                            <TextBlock Text="BAIRRO:" Grid.Row="6" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" Height="25"/>

                            <!-- RUA/AVENIDA -->
                            <TextBlock Text="RUA/AVENIDA:" Grid.Row="7" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="7" VerticalAlignment="Center" Height="25"/>

                            <!-- NÚMERO -->
                            <TextBlock Text="NÚMERO:" Grid.Row="8" VerticalAlignment="Center" Margin="0 0 10 0" FontFamily="Georgia" FontSize="14"/>
                            <TextBox Grid.Column="1" Grid.Row="8" VerticalAlignment="Center" Height="25"/>

                        </Grid>

                        <!-- Botões Abaixo -->

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="center" VerticalAlignment="Bottom" >
                            <Button Content="LIMPAR" HorizontalAlignment="Center" Margin="0,5" Width="150" Height="40" FontFamily="Georgia" FontSize="14">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel>
                                                <Image Source="../Recursos/imagens/VASSOURINHA.png" Height="24" HorizontalAlignment="Center"  />
                                                <TextBlock Text="LIMPAR" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>


                            <Button Content="SALVAR" HorizontalAlignment="Center" Margin="0,5" Width="150" Height="40" FontFamily="Georgia" FontSize="14" >
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <StackPanel>
                                                <Image Source="../Recursos/Imagens/salvar.png" Height="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="SALVAR" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
