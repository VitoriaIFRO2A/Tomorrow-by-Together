<Window x:Class="tbt.Telas.ConsultarCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbt.Telas"
        mc:Ignorable="d"
       Title="Consultar Cliente" Height="350" Width="525" Background="#D9D9D9">

    <!-- Definição de estilos para reutilização -->
    <Window.Resources>
        <!-- Estilo de borda -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#F74780"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#ffe4ec"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="#F74780"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#F74780"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="#F74780"/>
            <Setter Property="Background" Value="#F74780"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ffe4ec">


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="445*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Dados do Cliente" Background="White" Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="3" BorderBrush="White" FontFamily="Georgia">
            <Grid Background="White" Height="59">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="440.212"/>
                    <ColumnDefinition Width="170.405"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- CNPJ -->
                <StackPanel Grid.ColumnSpan="5" Margin="0,0,0,20">
                    <WrapPanel>
                        <Label Content="CPF:" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtCNPJ" Width="100" Grid.Column="1"  BorderBrush="#F74780"/>
                        <Button Content="Pesquisar" Grid.Column="2" Margin="1,0,0,0" Width="80" Background="White" BorderBrush="#F74780"/>
                    </WrapPanel>
                </StackPanel>
                <!-- Nome Empresa -->
                <StackPanel Grid.ColumnSpan="5" Margin="0,0,0,20">
                    <WrapPanel>
                        <Label Content="Nome:" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="220,0,0,0" BorderBrush="#F74780"/>
                        <TextBox x:Name="txtNomeEmpresa" Width="95" Grid.Column="1" Grid.Row="1" BorderBrush="#F74780"/>
                        <Button Content="Pesquisar" Grid.Column="2" Grid.Row="1" Margin="1,0,0,0" Width="80" Background="White" BorderBrush="#F74780"/>
                    </WrapPanel>

                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- DataGrid para exibir resultados da consulta -->
        <DataGrid x:Name="dgFornecedores" Grid.Row="2" Margin="10,10,10,10" AutoGenerateColumns="False" Background="White" BorderBrush="#F74780" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="NOME" Binding="{Binding NOME}" Width="*" />
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="*" />
                <DataGridTextColumn Header="ENDEREÇO" Binding="{Binding ENDERECO}" Width="*" />
                <DataGridTextColumn Header="NUMERO" Binding="{Binding NUMERO}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botões de ação -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="57,10,0,10" Grid.Column="1">
            <Button Content="Realizar Nova Pesquisa" Margin="10"  Background="White" Foreground="Black" BorderBrush="#F74780" Height="31" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" BorderThickness="1" BorderBrush="#F74780">
                            <StackPanel>
                                <TextBlock Text="Realizar Nova Pesquisa" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5 7 5 0" FontFamily="Georgia"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Voltar ao Menu Inicial" Margin="10"  Background="White" Foreground="Black" BorderBrush="#F74780">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" BorderThickness="1" BorderBrush="#F74780">
                            <StackPanel>
                                <TextBlock Text="Voltar ao Menu Inicial" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5 7 5 0" FontFamily="Georgia"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
